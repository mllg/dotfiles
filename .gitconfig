[user]
    name = Michel Lang
    email = michellang@gmail.com
[github]
    user = mllg
[rebase]
    stat = true
[alias]
    undo-commit = reset --soft HEAD^
    track = "!git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`"
	prune-branches = "!git remote prune origin && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D"
[core]
    autocrlf = input
    ignorecase = false
[clean]
    requireForce = false
[hub]
	protocol = git
[fetch]
	prune = true
[push]
    default = current
[pull]
	rebase = true
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[credential]
	helper = cache
[url "git@github.com:"]
    insteadOf = http://github.com
    insteadOf = https://github.com
[init]
	defaultBranch = main
[commit]
	template = /home/michel/.config/git/commit.template
