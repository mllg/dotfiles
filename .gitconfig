[user]
    name = Michel Lang
    email = michellang@gmail.com
[github]
    user = mllg
[push]
    default = current
[rebase]
    stat = true
[alias]
    undo-commit = reset --soft HEAD^
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto
    interactive = auto
[core]
    autocrlf = input
    ignorecase = false
[clean]
    requireForce = false
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[difftool "vimdiff"]
    cmd = "nvim -d '$LOCAL' '$REMOTE'"
[merge]
    tool = vimdiff
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[hub]
	protocol = git
